{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@superclean-workspace/shared": ["libs/shared/src/index.ts"],
      "@superclean-workspace/shared/styles": ["libs/shared/src/styles/global.css"],
      "@superclean-workspace/ui-components": ["libs/ui-components/src/index.ts"],
      "@shared/*": ["libs/shared/src/*"],
      "@shared/data": ["libs/shared/src/data/index.ts"],
      "@ui-components/*": ["libs/ui-components/src/*"],
      "@superclean-workspace/ui-components/*": ["libs/ui-components/src/*"],
      "@components/*": ["libs/components/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
