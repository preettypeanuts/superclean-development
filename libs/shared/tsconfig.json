{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "../ui-components/src/components/pie-chart.tsx", "../ui-components/src/components/rupiah-input.tsx"],
  "exclude": ["node_modules"]
}
